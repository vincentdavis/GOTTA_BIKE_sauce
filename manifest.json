{
    "manifest_version": 1,
    "name": "GOTTA.BIKE sauce",
    "description": "Display nearby riders with heart rate color-coded by HR zone",
    "author": "Vincent Davis",
    "website_url": "https://gotta.bike",
    "version": "2025.12.17.1",
    "content_js": [],
    "content_css": [],
    "web_root": "pages",
    "windows": [
        {
            "file": "pages/live-stats.html",
            "id": "live-stats",
            "name": "GOTTA.BIKE sauce",
            "description": "Shows nearby riders with HR zone color coding based on max HR",
            "overlay": true,
            "frame": false,
            "default_bounds": {
                "width": 250,
                "height": 400,
                "x": -300,
                "y": 100
            }
        },
        {
            "file": "pages/pre-race.html",
            "id": "pre-race",
            "name": "PreRace Heatmap",
            "description": "Pre-race heatmap showing entrant power data",
            "overlay": true,
            "frame": false,
            "default_bounds": {
                "width": 600,
                "height": 500,
                "x": 100,
                "y": 100
            }
        },
        {
            "file": "pages/club-ladder.html",
            "id": "club-ladder",
            "name": "Club Ladder",
            "description": "Compare two teams using GOTTA.BIKE data",
            "overlay": true,
            "frame": false,
            "default_bounds": {
                "width": 700,
                "height": 500,
                "x": 100,
                "y": 100
            }
        }
    ]
}
